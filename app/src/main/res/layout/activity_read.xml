<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1976D2"
    tools:context="com.abroscreative.fileinternalstorage.ReadActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="File Name"
        android:textSize="32sp"
        android:id="@+id/etFileTitle"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:textColor="#f00"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/etFileTitle"
        android:textSize="28sp"
        android:id="@+id/tvFileContent"
        android:layout_centerHorizontal="true"
        android:background="#BBDEFB"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        android:id="@+id/btnLoad"
        android:layout_below="@+id/tvFileContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="reset"
        android:id="@+id/btnReset"
        android:layout_alignTop="@+id/btnLoad"
        android:layout_toRightOf="@+id/btnLoad"
        android:layout_toEndOf="@+id/btnLoad"/>


</RelativeLayout>
